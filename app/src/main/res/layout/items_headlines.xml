<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="310dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_margin="2dp"
            app:cardCornerRadius="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/headline_img"
                    android:scaleType="centerCrop"
                    android:src="@drawable/news"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <TextView
                    android:id="@+id/title_hideline"
                    android:textColor="@color/subColor"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Contact lost with Sriwijaya Air Boeing 737-500 After Take Off."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/users"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/headline_auth"
                        android:textColor="@color/dark"
                        android:layout_marginLeft="12dp"
                        android:text="Jhon Smith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:gravity="end"
                        android:id="@+id/headline_created"
                        android:textColor="@color/dark"
                        android:layout_marginLeft="12dp"
                        android:text="10 Jun 2023"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>